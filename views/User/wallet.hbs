<div class="row">
    <div class="col-sm-12 col-md-3 col-lg-3">
        <ul class="user-profile">
            <li class="pt-5"> <a href="/user-profile"
                    class="nav-link btn btn-dark btn-black-default-hover active ">PROFILE</a></li>
            <li class="pt-2"> <a href="/orders-list"
                    class="nav-link btn btn-dark btn-black-default-hover active">ORDERS</a>
            </li>
            <li class="pt-2"> <a href="/wishlist"
                    class="nav-link btn btn-dark btn-black-default-hover active">WISHLIST</a>
            </li>
            <li class="pt-2"> <a href="/user-all-address"
                    class="nav-link btn btn-dark btn-black-default-hover active">ADDRESS</a></li>
            <li class="pt-2"> <a href="/Wallet" class="nav-link btn btn-dark btn-black-default-hover active">WALLET</a>
            </li>



        </ul>


    </div>

    <div class="col-sm-12 col-md-9 col-lg-9">
        <main class="content">
            {{#if walletD}}
            <div class="container-fluid">
                <div class="card">
                        <div class="card-body">
                    <div class="row">
                            

                                {{!-- <div class="d-flex "> --}}
                                    <div class="col-md-4 col-lg-4 col-12">
                                        <div class="align-self-center" style="color:#4caf50">
                                            {{#if walletD}}
                                            {{#with walletD}}
                                            <h2 class="h1 mb-0 me-4">₹{{this.walletAmount}}</h2>
                                            {{/with}}
                                            {{else}}
                                            <h2 class="h1 mb-0 me-4">₹0</h2>
                                            {{/if}}
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-lg-4 col-12">
                                        <div style="color:#4caf50">
                                            <h4></h4>
                                            <p class="mb-0">Total Wallet Amount</p>
                                        </div>
                                    </div>
                                    {{!--
                                </div> --}}
                                <div class="col-md-4 col-lg-4 col-12">
                                    <div class="align-self-center">
                                        <i class="fas fa-wallet  fa-3x" style="color:#4caf50;"></i>
                                    </div>
                                </div>

                            
                    </div>
                        </div>
                </div>

                <h3 class="text-center pt-5 pb-1">All transaction details</h3>
                <div class="table-responsive">
                    <table class="table align-middle mb-0 bg-white">
                        <thead class="table-success">
                            <tr>
                                <th>Transaction no</th>
                                <th>Debit/Credit</th>

                                <th>Type</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#with walletD}}
                            {{#each transactions}}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">

                                        <div class="ms-3">
                                            <p class="fw-bold mb-1">{{this.date}}</p>

                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <p class="fw-normal mb-1"> {{this.mode}}</p>

                                </td>
                                <td>
                                    <span class="badge badge-success rounded-pill d-inline">{{this.type}}</span>
                                </td>
                                <td>₹{{this.amount}}</td>

                            </tr>
                            {{/each}}
                            {{/with}}

                        </tbody>
                    </table>
                </div>

            </div>
            {{else}}
            <div class="container">

                <div class="col d-flex justify-content-center">
                    <div class="card w-40 d-flex justify-content-center">
                        <h4 class="fw-bold text-dark text-center mt-5">Wallet</h4>
                        <a href="/products">
                            <img src="/img/emptyWallet.jpg" class="card-img-top" style="height:350px"
                                alt="Palm Springs Road" />
                            <div class="card-body d-flex justify-content-center">

                                <p class="card-text"><a href="/products" class="primary-btn mb-5 ">Go to Shop</a></p>
                            </div>
                        </a>
                    </div>
                </div>


            </div>
            {{/if}}
        </main>

    </div>