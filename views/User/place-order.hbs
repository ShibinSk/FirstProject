					razorpayPayment(response.order);
				}
			}
		})
	})

	function razorpayPayment(order) {
		console.log(order)
		let amount = order.amount

		var options = {
			"key": "rzp_test_RF0nTXmxHqKSxA", // Enter the Key ID generated from the Dashboard
