              <input class="otp" type="text" name="mobile" oninput='digitValidate(this)' onkeyup='tabChange(3)' maxlength=1 >
              <input class="otp" type="text" name="mobile" oninput='digitValidate(this)'onkeyup='tabChange(4)' maxlength=1 >
           
