<body style="background-color:#181a1c;">
    <form action="/User/signup" id="frm" method="post">
      <div class="box mx-auto mt-5">
        <div class="form">
          <h2>SignUp</h2>
          {{!-- {{#if message}}
          <span class="text-danger" style="padding-left: 29%;">{{message}}</span>
          {{/if}} --}}
          <div class="inputBox">
            <input name="username" id="username" type="text">
            <span>Username</span>
            <i></i>
            {{!-- {{#if message}}
            <span class="text-danger" style="padding-left: 29%;">{{message}}</span>
            {{/if}} --}}

          </div>

          <div class="inputBox">
            <input name="Email" type="Email" />
            <span>Email</span>
            <i></i>
            {{!-- {{#if message}}
            <span class="text-danger" style="padding-left: 29%;">{{message}}</span>
            {{/if}} --}}
          </div>
          <div class="inputBox">
            <input name="Phone" type="number" />
            <span>Phone</span>
            <i></i>
            {{!-- {{#if message}}
            <span class="text-danger" style="padding-left: 29%;">{{message}}</span>
            {{/if}} --}}
          </div>
          <div class="inputBox">
            <input name="password" type="password" />
            <span>Password</span>
            <i></i>
            {{!-- {{#if message}}
            <span class="text-danger" style="padding-left: 29%;">{{message}}</span>
            {{/if}} --}}
          </div>

          <div class="links">
            <a class="mt-4" href="/User/login">You alrady have accound? ?</a>
            {{! <a href="/user/signup">Log In</a> }}
          </div>
          <button type="submit" class="button"><span>LOGIN</span></button>

        </div>
      </div>
    </form>
</body>







