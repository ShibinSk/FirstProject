<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>

  const order = document.getElementById('orderamount').innerText;
  const usercount = document.getElementById('usercount').innerText;
  const paymentcod=document.getElementById('paymentcod').innerText
  const paymentpaypal=document.getElementById('paymentpaypal').innerText;
  const paymentrazorpay=document.getElementById('paymentrazorpay').innerText;

  const orderstatus=document.getElementById('shipped').innerText;
  const statuspending=document.getElementById('pending').innerText;
  const statuscanceled=document.getElementById('canceled').innerText;
  const statusdeliverd=document.getElementById('deliverd').innerText;
  const statusplaces=document.getElementById('placed').innerText;
  const statusreturned=document.getElementById('Returned').innerText
  
  
 



   
 


  const ctx = document.getElementById('bar-chart-horizontal');

  new Chart(ctx, {
    type: 'bar',
    data: {
      labels: ['Deliverid', 'pending', 'cancelled', 'shipped', 'places','returned'],
      datasets: [{
        label: '# of Status',
        data: [statusdeliverd, orderstatus,statuspending,statuscanceled,statusplaces,statusreturned],
        borderWidth: 1
      }]
    },
    options: {
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
  });



  new Chart(document.getElementById("pie-chart"), {
    type: 'pie',
    data: {
      labels: ["COD", "Paypal", "Razorpay"],
      datasets: [{
        label: "orded (count)",
        backgroundColor: ["#3e95cd", "#8e5ea2", "#3cba9f"],
        data: [paymentpaypal,paymentcod,paymentrazorpay]
      }]
    },
    options: {
      title: {
        display: true,
        text: 'Predicted world population (millions) in 2050'
      }
    }
  });



  





 





</script>

